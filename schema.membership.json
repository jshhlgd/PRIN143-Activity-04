{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "Membership": {
        "type": "object",
        "properties": {
          "LastName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 20
          },
          "GivenName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 20
          },
          "MiddleName": {
            "type": "null"
          },
          "Birthdate": {
            "type": "object",
            "required": [
              "Year",
              "Month",
              "Day"
            ],
            "properties": {
              "Year": {
                "type": "integer",
                "minimum": 1900,
                "maximum": 2099
              },
              "Month": {
                "type": "integer",
                "minimum": 1,
                "maximum": 12
              },
              "Day": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "Gender": {
            "type": "string",
            "enum": [
              "M",
              "F"
            ]
          },
          "ContactDetails": {
            "type": "object",
            "properties": {
              "MobileNumber": {
                "type": "string",
                "pattern": "^0\\d{10}$"
              },
              "EmailAddress": {
                "type": "string",
                "format": "email"
              }
            },
            "required": [
              "MobileNumber",
              "EmailAddress"
            ]
          },
          "Interests": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "LastName",
          "GivenName",
          "MiddleName",
          "Birthdate",
          "Gender",
          "ContactDetails",
          "Interests"
        ]
      },
      "Platforms": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "Platform": {
              "type": "string",
              "enum": [
                "PC",
                "Playstation",
                "XBox"
              ]
            },
            "Enabled": {
              "type": "boolean"
            }
          },
          "required": [
            "Platform",
            "Enabled"
          ]
        }
      }
    },
    "required": [
      "Membership",
      "Platforms"
    ]
  }